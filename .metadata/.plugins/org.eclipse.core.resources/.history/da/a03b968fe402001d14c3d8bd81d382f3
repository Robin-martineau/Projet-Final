
public class Celsius {
	private double degrees;
	private Button[] bMoins;
	
	Celsius(double aDegrees, Button[] b2){
	 setDegrees(aDegrees);
	 setbMoins(b2);
	}
	
	public void plus() {
		setDegrees(getDegrees()+1);
	}
	
	public void moins() {
		setDegrees(getDegrees()-1);
	}
	
	public double getDegrees(){
	return degrees;
	}
	
	public void setDegrees(double aDegrees){
	degrees = aDegrees;
	}

	public void setbMoins(Button[] bMoins) {
		this.bMoins = bMoins;
	}
}