
public class Celsius {
	private double degrees;
	
	Celsius(double aDegrees){
	 setDegrees(aDegrees);
	}
	
	public void plus() {
		setDegrees(getDegrees()+1);
	}
	
	public void moins() {
		setDegrees(getDegrees()-1);
	}
	
	public double getDegrees(){
	return degrees;
	}
	
	public void setDegrees(double aDegrees){
	degrees = aDegrees;
	}

	public void setbMoins(ButtonMoins bMoins) {
		this.bMoins = bMoins;
	}
}